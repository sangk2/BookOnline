<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:background="@drawable/border"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgBookDetail"
                android:layout_weight="4"
                android:layout_width="0dp"
                android:src="@drawable/chao"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:layout_weight="6"
                android:layout_width="0dp"
                android:paddingLeft="10dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textSize="20sp"
                    android:textColor="#323FB3"
                    android:gravity="center_vertical"
                    android:text="pid"
                    android:id="@+id/tvIdSP"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textSize="14sp"
                    android:textColor="#000"
                    android:gravity="center_vertical"
                    android:text="Name"
                    android:id="@+id/tvTenSP"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textSize="14sp"
                    android:textColor="#000"
                    android:gravity="center_vertical"
                    android:text="Name"
                    android:id="@+id/tvTacGiaSP"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textSize="14sp"
                    android:textColor="#C4EF12A5"
                    android:gravity="center_vertical"
                    android:text="Price"
                    android:id="@+id/tvGiaSP"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:textSize="14sp"
                    android:textColor="#000"
                    android:gravity="center_vertical"
                    android:text="Mô tả"
                    android:id="@+id/tvMoTaSP"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="30dp">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/btnDeleteSP"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:background="@drawable/btn_button"
                        android:textColor="#ffff"
                        android:text="Xóa"/>

                    <Button
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/btnUpdateSP"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:background="@drawable/border"
                        android:backgroundTint="#4CAF50"
                        android:textColor="@color/white"
                        android:text="Cập nhật"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>